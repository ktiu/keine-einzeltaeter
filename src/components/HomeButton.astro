<div id="homeButton">
  <a href="#"><img src="home.svg" alt="Nach oben"/></a>
</div>

<style>
  #homeButton {
    position: fixed;
    top: 1rem;
    right: 1rem;
    opacity: 0;
    width: 3rem;
    height: 3rem;
    background-color: var(--accent);
    border-radius: 50%;
    transition: opacity 0.2s;
  }
  #homeButton img {
    width: 3rem;
    height: 3rem;
  }
</style>

<script>
  const visible = () => {
    const home = document.getElementById("homeButton")!
    var top = document.body.scrollTop + document.documentElement.scrollTop < 100
    home.style.opacity = top ? '0' : '1'
  }
  window.onscroll = visible
  visible()
</script>
